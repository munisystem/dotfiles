#!/bin/sh

version="0.5.0"

bin="mitamae-x86_64-$(uname | tr "[A-Z]" "[a-z]")"

itamae="bin/${bin}-${version}"
if ! [ -f "${itamae}" ]; then
  url="https://github.com/k0kubun/mitamae/releases/download/v${version}/${bin}.tar.gz"
  curl -L $url > "/tmp/${bin}.tar.gz";
  tar zxvf "/tmp/${bin}.tar.gz"
  mv $bin $itamae
  chmod +x $itamae
fi

exec $itamae $@
